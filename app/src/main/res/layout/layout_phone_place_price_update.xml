<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        app:cardBackgroundColor="@color/bright_foreground_disabled_material_dark"
        app:cardCornerRadius="20dp"
        app:contentPadding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">


            <EditText
                android:id="@+id/edtProductPhoneUpdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="@string/enter_the_new_phone_number"
                android:inputType="numberDecimal|number"
                android:textColor="@color/ratingYellow"
                android:textColorHint="@color/green"
                android:visibility="gone"
                tools:ignore="TextFields" />

            <EditText
                android:id="@+id/edtProductPlaceUpdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="@string/enter_new_place_where_the_product_is_located"
                android:inputType="text"
                android:textColor="@color/ratingYellow"
                android:textColorHint="@color/green"
                android:visibility="gone" />

            <EditText
                android:id="@+id/edtProductPriceUpdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/price_details"
                android:textColor="@color/ratingYellow"
                android:textColorHint="@color/green"
                android:visibility="gone" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>